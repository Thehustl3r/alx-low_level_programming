# Makefile for building the 'school' executabl

# Rule to build the executabledd

CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all: $(NAME)

%.o: %.c
	$(CC) -c -o $@ $<
# Compilation command
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
# Clean rule to remove the executable
clean:
	$(RM) $(OBJ) *~

oclean: $(OBJ)
	$(RM) $(OBJ)

fclean: $(NAME) $(OBJ)
	$(RM) *~ $(NAME) $(OBJ)

re: fclean all
