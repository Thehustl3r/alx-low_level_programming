# Makefile for building the 'school' executabl

# Rule to build the executabledd

CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

%.o: %.c
	$(CC) -c -o $@ $<
# Compilation command
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
# Clean rule to remove the executable
clean:
	rm -f $(OBJ) $(NAME)

